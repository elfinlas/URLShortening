<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Dev -->
    <springProfile name="dev">
        <!-- Console -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%5level) :[%F]%M\(%L\) : %m%n </pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>